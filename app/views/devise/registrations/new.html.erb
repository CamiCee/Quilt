<section class ="wrapper container-fluid">
     <nav class = "navbar navbar-default NavLogin">
         <section class = "navbar-header">
                <%= link_to "AZ Preston Hall", root_path, class: "navbar-brand NavLogin  LabelColor" %>
         </section>
    </nav>
    
    
    <div id="middle" class = "container-fluid ">
        
        <%= form_for(resource, as: resource_name,:html=> {:class => "LoginForm"}, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
        
          <h2 class = "LogTitle">Get Started</h2>
            
          <div class="field">
            <%= f.label :email, :class=> "LabelColor" %><br />
            <%= f.email_field :email, autofocus: true, :class => "form-control" %>
          </div>
        
          <div class="field LabelColor">
            <%= f.label :password, :class=> "LabelColor" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation, :class=> "LabelColor" %><br />
            <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>
          </div>
        
          <div id = "SignInBtn" class="SubBtn actions">
            <%= f.submit "Sign up", :class => "btn btn-default" %>
          </div>
      
          <div id = "SignInLog">
              <label>Already have an account?</label>
              <%= link_to 'Login', new_user_session_path, :class => "btn btn-default" %>
          </div>
          
        <% end %>
    </div>
    
    
    
   
</section>

    
    <footer class = "Sessionsfooter container-fluid">
        <p class = "text-muted FooterText">&copy; 2016 Aston Preston Hall</p>
    </footer>
    
    
</section>