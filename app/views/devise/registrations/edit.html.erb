      <!-- Content -->
      
      <section id = "EditPage" class = "container-fluid">
          
            <% if current_user.first_name !=  "" %>
                <h2>current_user.first_name </h2>
            
            <% else %>
              <h2>Account</h2>
            <% end %>
          
      <%= form_for(resource, as: resource_name,:html=> {:class => "LoginForm"}, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
      
        <div class = "form-group">
        
            <div class="Field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
          
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          
            <div class="Field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          
            <div class="Field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>
          
            <div class="Field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
            </div>
        
        </div>
        
        <div class = "form-group">
          
        
              <div class="Field">
                <%= f.label :first_name %> <br />
                <%= f.text_field :first_name, autocomplete: "off", :class => "form-control" %>
              </div>
              
              <div class="Field">
                <%= f.label :last_name %> <br />
                <%= f.text_field :last_name, autocomplete: "off", :class => "form-control" %>
              </div>
              
              
              <div class="Field">
                <%= f.label :hall_name %> <br />
                <%= f.text_field :hall_name, autocomplete: "off", :class => "form-control" %>
              </div>
        
        </div>
        
        <div class = "form-group">
        
              <div class="Field">
                <%= f.label :faculty %> <br />
                <%= f.text_field :faculty, autocomplete: "off", :class => "form-control" %>
              </div>
              
              <div class="Field">
                <%= f.label :first_major %> <br />
                <%= f.text_field :first_major, autocomplete: "off", :class => "form-control" %>
              </div>
              
              <div class="Field">
                <%= f.label :second_major %> <br />
                <%= f.text_field :second_major, autocomplete: "off", :class => "form-control" %>
              </div>
              
              <div class="Field">
                <%= f.label :minor %> <br />
                <%= f.text_field :minor, autocomplete: "off", :class => "form-control" %>
              </div>
              
              <div class="Field">
                <%= f.label :status %> <br />
                <%= f.text_field :status, autocomplete: "off", :class => "form-control" %>
              </div>
        
        </div>
        
      
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>
      
      
    

